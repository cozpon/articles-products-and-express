<h1> Articles! </h1>
<a href="/articles/new" class="button">Write A New Article</a>
  <div class="articles">
  <ul class='articles'>
    {{#each articles}}
      <br>
      <li>Title : {{title}}</li>
      <li>Author : {{author}}</li>
      <li>Body : {{body}}</li>
      <br>
      <form action="/articles/{{title}}/" method="GET" >
       <input type="submit" value="Select Article">
      </form>
    {{/each}}
  </ul>
</div>

{{> footer}}