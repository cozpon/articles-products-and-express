<h1> Product (singular) </h1>

<div class="products/:id">

    <ul>
      <li>Name: {{name}}</li>
      <li>ID: {{id}}</li>
      <li>Price: {{price}}</li>
      <li>Inventory: {{inventory}}</li>
    </ul>
  </div>
<br>
<br>
<br>
<form action="/products/{{id}}/edit" method="GET" >
  <input type="submit" value="Edit Product">
</form>
<br>

<form action="/products/{{id}}?_method=DELETE" method="POST" >
  <input type="submit" value="Delete Product">
</form>
<br>

<a href="/products" class="button"> Back to Products</a>
{{> footer}}


